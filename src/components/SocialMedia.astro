---
import Linkedin from "@/assets/icons/linkedin.svg";
import Ig from "@/assets/icons/ig.svg";
import Gh from "@/assets/icons/gh.svg";

const smLinks = [
  {
    name: "Linkedin",
    href: "https://linkedin.com/in/manvel-muradyan-79174633b",
    img: Linkedin,
  },
  { name: "Instagram", href: "https://instagram.com/mno_ker", img: Ig },
  { name: "Github", href: "https://github.com/manveldev", img: Gh },
];
---

{
  smLinks.map((link) => (
    <a target="_blank" href={link.href} aria-label={link.name}>
      <link.img class="w-5 h-5 fill-current text-muted-foreground hover:text-surface-foreground hover:-translate-y-0.5 transition-all duration-300" />
    </a>
  ))
}
