---
import {
  designTools,
  webTools,
  frameWorkTools,
  libraryTools,
} from "@/utils/skills";
import { Section } from "@/layouts";
import SkillsList from "@/components/SkillsList.astro";
---

<Section id="skills" title="SKILLS & TOOLS">
  <div
    class="grid grid-cols-2 sm:grid-cols-4 space-y-10 sm:justify-items-center"
  >
    <SkillsList title="Design" skills={designTools} />
    <SkillsList title="Web" skills={webTools} />
    <SkillsList title="Framework" skills={frameWorkTools} />
    <SkillsList title="Library" skills={libraryTools} />
  </div>
  <p class="text-center">Many More</p>
</Section>
