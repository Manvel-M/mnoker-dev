---
import { Button } from "../ui";
import Lightning from "@/assets/icons/lightning.svg";
import Palette from "@/assets/icons/palette.svg";
import Responsive from "@/assets/icons/responsive.svg";
import ArrowDown from "@/assets/icons/arrow-down.svg";
---

<section
  class="relative h-screen flex items-center justify-center bg-linear-to-br/oklch from-gray-50 via-slate-200 to-purple-200 dark:from-gray-950 dark:via-slate-900 dark:to-purple-950 overflow-hidden transition-colors duration-300"
>
  <canvas id="hero-canvas" class="absolute inset-0 w-full h-full opacity-30 z-0"
  ></canvas>

  <!-- Floating Shapes -->
  <div class="absolute inset-0 pointer-events-none z-0">
    <div
      class="absolute w-20 h-20 top-[15%] left-[10%] rounded-full bg-linear-to-br/oklch from-indigo-500/10 to-purple-500/10 animate-float"
    >
    </div>
    <div
      class="absolute w-32 h-32 top-[60%] right-[15%] rounded-full bg-linear-to-br/oklch from-indigo-500/10 to-purple-500/10 animate-float [animation-delay:2000ms]"
    >
    </div>
    <div
      class="absolute w-16 h-16 bottom-[20%] left-[20%] rounded-full bg-linear-to-br/oklch from-indigo-500/10 to-purple-500/10 animate-float [animation-delay-4000]"
    >
    </div>
  </div>

  <!-- Main Content -->
  <div class="z-10 text-center max-w-3xl px-8 animate-fade-up">
    <Button
      className="animate-slide-down"
      rounded="lg"
      size="sm"
      variant="ghost"
      ><span class="size-2 bg-green-500 rounded-full animate-pulse"
      ></span>Available for freelance</Button
    >
    <h1
      class="text-5xl md:text-7xl font-extrabold leading-tight text-transparent bg-clip-text bg-gradient-to-br from-foreground to-secondary-foreground mb-6 animate-slide-up [animation-delay:400ms]"
    >
      Creative Developer
    </h1>

    <h2
      class="text-2xl md:text-3xl font-semibold text-primary mb-4 animate-slide-up [animation-delay:600ms]"
    >
      Web Developer & Designer
    </h2>

    <p
      class="text-lg text-muted-foreground leading-relaxed max-w-xl mx-auto mb-12 animate-slide-up [animation-delay:800ms]"
    >
      I craft digital experiences that blend beautiful design with robust
      functionality. From concept to code, I bring ideas to life with modern
      technologies and creative flair.
    </p>

    <!-- Skills Cards -->
    <div
      class="flex flex-wrap justify-center gap-6 mb-12 animate-slide-up [animation-delay:1000ms]"
    >
      <div class="flex items-center gap-3">
        <div
          class="size-7 text-xs font-bold flex items-center justify-center rounded-md bg-gradient-to-br from-indigo-500 to-purple-500"
        >
          <Lightning class="size-5 fill-yellow-400 stroke-black" />
        </div><span>Frontend Development</span>
      </div>
      <div class="flex items-center gap-3">
        <div
          class="size-7 text-xs font-bold flex items-center justify-center rounded-md bg-gradient-to-br from-indigo-500 to-purple-500"
        >
          <Palette class="size-5 fill-yellow-400 stroke-black" />
        </div><span>UI/UX Design</span>
      </div>
      <div class="flex items-center gap-3">
        <div
          class="size-7 text-xs font-bold flex items-center justify-center rounded-md bg-gradient-to-br from-indigo-500 to-purple-500"
        >
          <Responsive class="size-5 fill-yellow-400 stroke-black" />
        </div><span>Responsive Design</span>
      </div>
    </div>

    <div
      class="flex flex-wrap justify-center gap-4 animate-slide-up [animation-delay:1200ms]"
    >
      <Button
        link
        href="#projects"
        className="bg-linear-to-br/oklch from-primary to-purple-500 hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        size="lg"
        rounded="lg"
        variant="primary">View My Work<span>→</span></Button
      >
      <Button
        className="hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        size="lg"
        rounded="lg"
        variant="ghost">Get In Touch <span>✉</span></Button
      >
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 text-sm text-muted-foreground flex flex-col items-center gap-2 animate-fade-in [animation-delay:1500ms]"
  >
    <span>Scroll to explore</span>
    <div
      class="w-6 h-6 border-2 border-ring rounded-full flex items-center justify-center animate-bounce"
    >
      <ArrowDown class="" />
    </div>
  </div>
</section>
