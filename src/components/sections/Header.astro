---
import SocialMedia from "../SocialMedia.astro";
import Theme from "../Theme.astro";

const navLinks = [
  { name: "About", href: "#about" },
  { name: "Projects", href: "#projects" },
  { name: "Skills", href: "#skills" },
  { name: "Contact", href: "#contact" },
];
---

<header
  class="header transition-transform duration-300 fixed top-0 left-0 w-full z-50 px-6 md:px-12 py-4 backdrop-blur-md bg-white/5 border-b border-white/10"
>
  <div class="flex items-center justify-between max-w-screen-xl mx-auto">
    <!-- Logo -->
    <a
      href="#"
      class="text-white text-2xl font-bold tracking-tight bg-gradient-to-br from-indigo-400 to-purple-500 bg-clip-text"
    >
      MnoDev
    </a>

    <!-- Nav Links -->
    <nav
      class="hidden md:flex items-center gap-8 text-sm font-medium text-gray-300"
    >
      {
        navLinks.map((link) => (
          <a
            class="relative transition-all duration-300 hover:text-white hover:-translate-y-0.5  after:absolute after:content-[''] after:-bottom-1.5 after:right-0 after:left-0 after:bg-linear-to-r/oklch after:from-indigo-500 after:to-purple-500 after:w-0 after:h-[2px] hover:after:w-full after:transition-all after:duration-300"
            href={link.href}
          >
            {link.name}
          </a>
        ))
      }
    </nav>

    <!-- Social Icons -->
    <div class="flex items-center gap-4">
      <SocialMedia />
      <Theme />
    </div>
  </div>
</header>

<style>
  .hide {
    transform: translateY(-100px);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector(".header")!;

    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;
      if (scrollY > 100) {
        header.classList.add("hide");
      } else header.classList.remove("hide");
    });
  });
</script>
