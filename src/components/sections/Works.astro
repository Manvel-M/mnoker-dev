---
import { Image } from "astro:assets";
import { recentWorks } from "@/utils/works";
import { Section } from "@/components";
import { InView } from "@/components";
---

<Section id="projects" title="MY RECENT WORK" class="overflow-hidden">
  <div class="flex flex-col gap-5">
    {
      recentWorks.map((work, idx) => (
        <a
          target="_blank"
          href={work.link}
          class="transition-all duration-300 p-4 rounded-lg grid md:grid-cols-8 gap-2 bg-surface hover:bg-surface-elevated border border-border shadow-lg group opacity-0"
          data-inview="animate-fade-up"
        >
          <Image
            src={work.img}
            alt={work.name}
            height={150}
            width={225}
            class="rounded-lg md:col-span-2"
          />

          <div class="md:col-span-6 flex flex-col justify-between gap-5">
            <div>
              <h3>{work.name}</h3>
              <p class="tracking-wider text-sm text-muted-foreground">
                {work.desc}
              </p>
            </div>
            <ul class="flex gap-1">
              {work.stack.map((lib) => (
                <li class="text-sm bg-primary text-primary-foreground py-1 px-2 rounded">
                  {lib}
                </li>
              ))}
            </ul>
          </div>
        </a>
      ))
    }
  </div>
</Section>
<InView />
